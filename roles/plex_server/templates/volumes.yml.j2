---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: plex-pv
  labels:
    location: truenas
spec:
  storageClassName: nfs
  capacity:
    storage: 100Gi
  accessModes:
    - ReadWriteMany
  mountOptions:
    - hard
    - nfsvers=3
  nfs:
    server: {{ nfs_server_ip }}
    path: "{{ nfs_mount_path }}"

---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: plex-config-pv
  labels:
    location: truenas
spec:
  storageClassName: nfs
  capacity:
    storage: 100Gi
  accessModes:
    - ReadWriteMany
  mountOptions:
    - hard
    - nfsvers=3
  nfs:
    server: {{ nfs_server_ip }}
    path: "{{ nfs_mount_path }}/config"

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: plex-config-pvc
  namespace: {{ plex_namespace }}
  labels:
    app: plex
spec:
  storageClassName: nfs
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 100Gi

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: plex-pvc
  namespace: {{ plex_namespace }}
  labels:
    app: plex
spec:
  storageClassName: nfs
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 100Gi

