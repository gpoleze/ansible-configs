---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: nfs-nas-8gb-volume
  namespace: {{ namespace }}
  labels:
    location: truenas
spec:
  capacity:
    storage: 8Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteMany
  storageClassName: nfs
  mountOptions:
    - hard
    - nfsvers=3
  nfs:
    server: 192.168.0.225
    path: "/mnt/storage0/k8svolumes/8gbVolume1"

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: minecraft-pvc
  namespace: {{ namespace }}
  labels:
    app: minecraft
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: nfs
  resources:
    requests:
      storage: 8Gi

