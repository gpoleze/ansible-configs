---
apiVersion: v1
stringData:
 PIHOLE_WEBPASSWORD: "{{ pihole_web_password }}"
kind: Secret
metadata:
 name: pihole-environment-variables
 namespace: network-services
type: Opaque

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: pihole
  labels:
    app: pihole
    environment: production
  namespace: network-services
spec:
  replicas: 1
  revisionHistoryLimit: 5
  selector:
    matchLabels: 
      app: pihole
  template:
    metadata:
      name: pihole-pod
      labels:
        app: pihole
    spec:
      containers:
      - name: pihole-container
        image: pihole/pihole:latest
        imagePullPolicy: Always
        env:
        - name: TZ
          value: America/Vancouver
        - name: WEBPASSWORD
          valueFrom:
            secretKeyRef:
              name: pihole-environment-variables
              key: PIHOLE_WEBPASSWORD
        - name: DNS1
          value: "1.1.1.1"
        - name: DNS2
          value: "1.0.0.1"
        - name: ServerIp
          value: "192.168.0.2"
        volumeMounts:
        - mountPath: /etc/pihole/
          name: pihole-volume
        - mountPath: /etc/dnsmasq.d/
          name: dnsmasq-volume
              
      volumes:
      - name: pihole-volume
        persistentVolumeClaim:
          claimName: pihole-pv-claim-pihole
      - name: dnsmasq-volume
        persistentVolumeClaim:
          claimName: pihole-pv-claim-dnsmasq

---
apiVersion: v1
kind: Service
metadata:
  name: pihole
  namespace: network-services
spec:
  selector:
    app: pihole
  ports:
  - port: 8080
    targetPort: 80
    name: pihole-admin
  - port: 53
    targetPort: 53
    protocol: TCP
    name: dns-tcp
  - port: 53
    targetPort: 53
    protocol: UDP
    name: dns-udp
  externalIPs:
  - 192.168.0.160
  # externalTrafficPolicy: Local