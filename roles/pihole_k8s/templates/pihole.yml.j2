---
apiVersion: v1
stringData:
 PIHOLE_WEBPASSWORD: "{{ pihole_web_password }}"
kind: Secret
metadata:
 name: pihole-environment-variables
 namespace: network-services
type: Opaque

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: pihole
  labels:
    app: pihole
  namespace: network-services
spec:
  replicas: 1
  revisionHistoryLimit: 5
  selector:
    matchLabels: 
      app: pihole
  template:
    metadata:
      name: pihole-pod
      labels:
        app: pihole
    spec:
      containers:
      - name: pihole-container
        image: pihole/pihole:latest
        imagePullPolicy: Always
        resources:
          requests:
            cpu: "250m"
            memory: "128M"
          limits:
            cpu: "750m"
            memory: "512M"
        ports:
        - name: liveness-port
          containerPort: 80
        readinessProbe:
          httpGet:
            path: /admin
            port: liveness-port
          initialDelaySeconds: 5
          periodSeconds: 5
        env:
        - name: TZ
          value: America/Vancouver
        - name: WEBPASSWORD
          valueFrom:
            secretKeyRef:
              name: pihole-environment-variables
              key: PIHOLE_WEBPASSWORD
        - name: DNS1
          value: "1.1.1.1"
        - name: DNS2
          value: "1.0.0.1"
          value: "192.168.0.150"
        volumeMounts:
        - mountPath: /etc/pihole/
          name: pihole-volume
        - mountPath: /etc/dnsmasq.d/
          name: dnsmasq-volume
              
      volumes:
      - name: pihole-volume
        persistentVolumeClaim:
          claimName: pihole-pv-claim-pihole
      - name: dnsmasq-volume
        persistentVolumeClaim:
          claimName: pihole-pv-claim-dnsmasq

---
apiVersion: v1
kind: Service
metadata:
  name: pihole-service-tcp
  namespace: network-services
  annotations:
    metallb.universe.tf/address-pool: microk8s-ip-space
    metallb.universe.tf/allow-shared-ip: pihole_shared_dns
spec:
  selector:
    app: pihole
  type: LoadBalancer
  loadBalancerIP: 192.168.0.150
  ports:
  - port: 80
    targetPort: 80
    name: pihole-admin
  - port: 53
    targetPort: 53
    protocol: TCP
    name: dns-tcp
  externalTrafficPolicy: Local
  
---
apiVersion: v1
kind: Service
metadata:
  name: pihole-service-udp
  namespace: network-services
  annotations:
    metallb.universe.tf/address-pool: microk8s-ip-space
    metallb.universe.tf/allow-shared-ip: pihole_shared_dns
spec:
  selector:
    app: pihole
  type: LoadBalancer
  loadBalancerIP: 192.168.0.150
  ports:
  - port: 53
    targetPort: 53
    protocol: UDP
    name: dns-udp
  externalTrafficPolicy: Local
